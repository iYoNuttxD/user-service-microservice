{
  "name": "user-service-microservice",
  "version": "1.0.0",
  "description": "Production-ready user service microservice with JWT authentication, OPA authorization, NATS messaging, and MongoDB persistence",
  "main": "src/main/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/main/server.js",
    "dev": "node --watch src/main/server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=tests/unit",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:arch": "NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=tests/architecture",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "microservice",
    "user-service",
    "authentication",
    "jwt",
    "mongodb",
    "nats",
    "opa",
    "clean-architecture"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "mongoose": "^8.0.3",
    "nats": "^2.18.0",
    "jose": "^5.1.3",
    "bcrypt": "^5.1.1",
    "prom-client": "^15.1.0",
    "swagger-ui-express": "^5.0.0",
    "yaml": "^2.3.4",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
