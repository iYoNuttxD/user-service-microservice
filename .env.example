# Server Configuration
PORT=3011
NODE_ENV=development
API_VERSION=v1
LOG_LEVEL=info

# MongoDB Configuration
USERS_MONGO_URI=mongodb://localhost:27017
USERS_MONGO_DB_NAME=users_db

# NATS Configuration
NATS_URL=nats://localhost:4222
NATS_QUEUE_GROUP=user-service
NATS_JETSTREAM_ENABLED=false
NATS_SUBJECTS=user.created,user.updated

# JWT Configuration
AUTH_JWT_ISSUER=user-service
AUTH_JWT_AUDIENCE=microservices
AUTH_JWT_EXPIRES_IN=1h
AUTH_JWT_SECRET=your-secret-key-change-in-production
# AUTH_JWKS_URI=https://your-auth-provider/.well-known/jwks.json
AUTH_JWT_REQUIRED=false

# OPA Configuration
OPA_URL=http://localhost:8181
OPA_POLICY_PATH=/v1/data/users/allow
OPA_TIMEOUT_MS=3000
OPA_FAIL_OPEN=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_METRICS=true

# CORS
CORS_ORIGIN=*
